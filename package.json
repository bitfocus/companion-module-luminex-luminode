{
	"name": "LumiNode",
	"version": "1.0.0",
	"main": "dist/main.js",
	"scripts": {
		"postinstall": "husky",
		"format": "prettier -w .",
		"prepare": "husky install",
		"package": "run build && companion-module-build",
		"dev": "yarn build:main --watch",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"lint:raw": "eslint",
		"lint": "run lint:raw ."
	},
	"license": "MIT",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-luminex-luminode.git"
	},
	"engines": {
		"node": "^22.14",
		"yarn": "^4"
	},
	"dependencies": {
		"@companion-module/base": "~1.13.2",
		"bonjour-service": "^1.3.0"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.4.1",
		"@types/lodash-es": "^4.17.12",
		"@types/node": "^18.19.129",
		"eslint": "^9.36.0",
		"husky": "^8.0.3",
		"lint-staged": "^15.5.2",
		"prettier": "^3.6.2",
		"rimraf": "^5.0.10",
		"ts-node": "^10.9.2",
		"typescript": "~5.2.2",
		"typescript-eslint": "^8.30.1"
	},
	"prettier": "@companion-module/tools/.prettierrc.json",
	"packageManager": "yarn@4.10.3+sha512.c38cafb5c7bb273f3926d04e55e1d8c9dfa7d9c3ea1f36a4868fa028b9e5f72298f0b7f401ad5eb921749eb012eb1c3bb74bf7503df3ee43fd600d14a018266f"
}
